<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:cdroid="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item cdroid:state_focused="false" cdroid:state_selected="false" cdroid:state_pressed="false" cdroid:drawable="@drawable/tab_unselected" />
    <item cdroid:state_focused="false" cdroid:state_selected="true" cdroid:state_pressed="false" cdroid:drawable="@drawable/tab_selected" />

    <!-- Focused states -->
    <item cdroid:state_focused="true" cdroid:state_selected="false" cdroid:state_pressed="false" cdroid:drawable="@drawable/tab_focus" />
    <item cdroid:state_focused="true" cdroid:state_selected="true" cdroid:state_pressed="false" cdroid:drawable="@drawable/tab_focus" />

    <!-- Pressed -->
    <item cdroid:state_pressed="true" cdroid:drawable="@drawable/tab_press" />
</selector>
