<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:cdroid="http://schemas.android.com/apk/res/android">
    
    <item cdroid:id="@+cdroid:id/background">
        <shape cdroid:shape="rectangle">
            <corners cdroid:radius="5dip" />
            <gradient
                    cdroid:startColor="#ff9d9e9d"
                    cdroid:centerColor="#ff5a5d5a"
                    cdroid:centerY="0.75"
                    cdroid:endColor="#ff747674"
                    cdroid:angle="270"
            />
        </shape>
    </item>
    
    <item cdroid:id="@+cdroid:id/progress">
        <clip>
            <shape cdroid:shape="rectangle">
                <corners cdroid:radius="5dip" />
                <gradient
                        cdroid:startColor="#ffffd300"
                        cdroid:centerColor="#ffffb600"
                        cdroid:centerY="0.75"
                        cdroid:endColor="#ffffcb00"
                        cdroid:angle="270"
                />
            </shape>
        </clip>
    </item>
    
    <item cdroid:id="@+cdroid:id/secondaryProgress">
        <clip>
            <shape cdroid:shape="rectangle">
                <corners cdroid:radius="5dip" />
                <gradient
                        cdroid:startColor="#80ffd300"
                        cdroid:centerColor="#80ffb600"
                        cdroid:centerY="0.75"
                        cdroid:endColor="#a0ffcb00"
                        cdroid:angle="270"
                />
            </shape>
        </clip>
    </item>
    
</layer-list>

