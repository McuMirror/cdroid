<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true">
    <item android:state_enabled="false" android:id="@android:+id/off">
        <nine-patch
            android:src="@mipmap/btn_switch_to_on_mtrl_00001"
            android:gravity="center"
            android:tintMode="multiply"
            android:tint="?attr/colorSwitchThumbNormal" />
    </item>
    <transition
        android:fromId="@android:+id/off"
        android:toId="@android:+id/on">
        <animation-list>
            <item android:duration="15">
                <nine-patch android:src="@mipmap/btn_switch_to_on_mtrl_00001" android:gravity="center" android:tintMode="multiply" android:tint="?attr/colorSwitchThumbNormal" />
            </item>
            <item android:duration="15">
                <nine-patch android:src="@mipmap/btn_switch_to_on_mtrl_00002" android:gravity="center" android:tintMode="multiply" android:tint="?attr/colorSwitchThumbNormal" />
            </item>
        </animation-list>
    </transition>
    <transition android:fromId="@android:+id/on" android:toId="@android:+id/off">
        <animation-list>
            <item android:duration="15">
                <nine-patch android:src="@mipmap/btn_switch_to_off_mtrl_00010" android:gravity="center" android:tintMode="multiply" android:tint="?attr/colorControlActivated" />
            </item>
            <item android:duration="15">
                <nine-patch android:src="@mipmap/btn_switch_to_off_mtrl_00011" android:gravity="center" android:tintMode="multiply" android:tint="?attr/colorControlActivated" />
            </item>
        </animation-list>
    </transition>
</animated-selector>
