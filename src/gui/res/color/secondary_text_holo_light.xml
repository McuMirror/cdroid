<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:cdroid="http://schemas.android.com/apk/res/android">
    <item cdroid:state_window_focused="false" cdroid:state_enabled="false" cdroid:color="@cdroid:color/dim_foreground_disabled_holo_light"/>
    <item cdroid:state_window_focused="false" cdroid:color="@cdroid:color/dim_foreground_holo_light"/>
    <!-- Since there is only one selector (for both light and dark), the light's selected state shouldn't be inversed like the dark's. -->
    <item cdroid:state_pressed="true" cdroid:state_enabled="false" cdroid:color="@cdroid:color/dim_foreground_disabled_holo_light"/>
    <item cdroid:state_selected="true" cdroid:state_enabled="false" cdroid:color="@cdroid:color/dim_foreground_disabled_holo_light"/>
    <item cdroid:state_pressed="true" cdroid:color="@cdroid:color/dim_foreground_holo_light"/>
    <item cdroid:state_selected="true" cdroid:color="@cdroid:color/dim_foreground_holo_light"/>
    <item cdroid:state_activated="true" cdroid:color="@cdroid:color/bright_foreground_holo_light"/>
    <item cdroid:state_enabled="false" cdroid:color="@cdroid:color/dim_foreground_disabled_holo_light"/>
    <item cdroid:color="@cdroid:color/dim_foreground_holo_light"/> <!-- not selected -->
</selector>
