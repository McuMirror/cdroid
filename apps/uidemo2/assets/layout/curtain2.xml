<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_above="@+id/gap">

        <TextView
            android:id="@+id/devicename1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:text="一楼卧室窗帘" />

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/pause"
            android:layout_alignBottom="@id/pause"
            android:drawableTop="@mipmap/housele_cl_switch_on_sel"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="打开" />

        <TextView
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devicename1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_margin="20dp"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/housele_cl_switch_zt_sel"
            android:text="暂停" />

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pause"
            android:layout_toRightOf="@id/pause"
            android:drawableTop="@mipmap/housele_cl_switch_off_del"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="关闭" />
    </RelativeLayout>
    <View
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="#111111" />
    <RelativeLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/devicename">
        <TextView
            android:id="@+id/devicename2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一楼卧室窗纱"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="30dp"/>
        <TextView
            android:id="@+id/open1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pause1"
            android:layout_toLeftOf="@+id/pause1"
            android:drawableTop="@mipmap/housele_cl_switch_on_sel"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="打开" />
        <TextView
            android:id="@+id/pause1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devicename2"
            android:layout_centerHorizontal="true"
            android:text="暂停"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="20dp"
            android:drawableTop="@mipmap/housele_cl_switch_zt_sel" />

        <TextView
            android:id="@+id/close1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pause1"
            android:layout_toRightOf="@id/pause1"
            android:drawableTop="@mipmap/housele_cl_switch_off_del"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="关闭" />
    </RelativeLayout>
    <TextView
        android:id="@+id/devicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:text="二路窗帘面板"/>
</RelativeLayout>

