<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#111111">
    <LinearLayout
        android:id="@+id/title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="222222">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="右侧标题"
            android:textSize="20dp"
         />
        </LinearLayout>
        <ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#333333"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/housele_tabbar_icon_turnpage_left_nor"
            />
            <HorizontalScrollView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#444444" >
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/lights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灯光"
	            android:textSize="16dp"
                    android:margin="13dp"
               	    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_light_nor"/>
                <TextView
                    android:id="@+id/curtains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="窗帘"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_curtain_nor"/>
                <TextView
                    android:id="@+id/sockets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="插座"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_socket_nor"/>
                <TextView
                    android:id="@+id/airconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_conditioner_nor"/>
                <TextView
                    android:id="@+id/tvsets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电视"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_tv_sel"/>
                <TextView
                    android:id="@+id/ailocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能门锁"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_lock_nor"/>
                <TextView
                    android:id="@+id/hangers" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晾衣架"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_lyj_nor"/>
                <TextView
                    android:id="@+id/centeraircond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中央空调"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_zykt_nor"/>
                <TextView
                    android:id="@+id/centeraircond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音乐系统"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_music_nor"/>
                <TextView
                    android:id="@+id/music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="窗帘电机"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_cldj_sel"/>
                <TextView
                    android:id="@+id/centeraircond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地暖"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_dn_nor"/>
                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新风系统"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_xfmb_sel"/>
                <TextView
                    android:id="@+id/acfan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调扇"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_kts_nor"/>
                <TextView
                    android:id="@+id/dvd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DVD"
                    android:textSize="16dp"
                    android:margin="13dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@mipmap/housele_tabbar_icon_dvd_nor"/>
            </LinearLayout>
        </HorizontalScrollView>
        <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_conteRt"
           android:src="@mipmap/housele_tabbar_icon_turnpage_right_nor"
            />
     </LinearLayout>
</LinearLayout>

