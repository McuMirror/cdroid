<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/housele_tv_on_img"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="30dp"/>
    <TextView
        android:id="@+id/devicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客厅电视"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/poweron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/poweroff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:text="关闭"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/housele_tv_swith_off"/>
            <TextView
                android:id="@+id/volumn_down"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:text="音量减"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/housele_tv_vol_dn"/>
            <TextView
                android:id="@+id/volumn_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:text="音量加"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/housele_tv_vol_up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:text="上一页"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/housele_tv_vol_last"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:text="下一页"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/housele_tv_vol_next"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

