<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/aircond_powerstate" />
    <TextView
        android:id="@+id/devicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/power"
        android:layout_marginVertical="20dp"
        android:text="空调扇"
        android:layout_centerHorizontal="true"
        android:background="@drawable/powerstate"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/devicename">
       <TextView
          android:id="@+id/coldfan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="冷风"
          android:gravity="center"
          android:layout_alignParentTop="true"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="20dp"
          android:drawableTop="@mipmap/housele_kts_icon_lf"/>
      <TextView
          android:id="@+id/fanspeed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="风速"
          android:gravity="center"
          android:layout_toRightOf="@id/coldfan"
          android:layout_marginHorizontal="20dp"
          android:layout_alignBottom="@id/coldfan"
          android:layout_centerHorizontal="true"
          android:drawableTop="@drawable/fan"/>
      <TextView
          android:id="@+id/windtype"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="风类"
          android:gravity="center"
          android:layout_toRightOf="@id/fanspeed"
          android:layout_marginHorizontal="20dp"
          android:layout_alignBottom="@id/coldfan"
          android:drawableTop="@mipmap/housele_kts_icon_fl"/>
      <TextView
          android:id="@+id/move"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="摆风"
          android:gravity="center"
          android:layout_toRightOf="@id/windtype"
          android:layout_alignBottom="@id/coldfan"
          android:layout_marginHorizontal="20dp"
          android:drawableTop="@mipmap/housele_kts_icon_bf"/>

      <TextView
          android:id="@+id/timer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="定时"
          android:gravity="center"
          android:layout_alignParentBottom="true"
          android:layout_marginHorizontal="20dp"
          android:layout_marginBottom="20dp"
          android:paddingVertical="20dp"
          android:drawableTop="@mipmap/housele_kts_icon_ds"/>
      <TextView
          android:id="@+id/oxygen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="氧吧"
          android:gravity="center"
          android:layout_toRightOf="@id/timer"
          android:layout_marginHorizontal="20dp"
          android:layout_alignBottom="@id/timer"
          android:drawableTop="@mipmap/housele_kts_icon_yb"/>
      <TextView
          android:id="@+id/emode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="节电"
          android:gravity="center"
          android:layout_toRightOf="@id/oxygen"
          android:layout_marginHorizontal="20dp"
          android:layout_alignBottom="@id/timer"
          android:drawableTop="@mipmap/housele_kts_icon_jd"/>
      <TextView
          android:id="@+id/hum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="加湿"
          android:gravity="center"
          android:layout_toRightOf="@id/emode"
          android:layout_alignBottom="@id/timer"
          android:layout_marginHorizontal="20dp"
          android:drawableTop="@mipmap/housele_kts_icon_js"/>
      </RelativeLayout>
</RelativeLayout>
